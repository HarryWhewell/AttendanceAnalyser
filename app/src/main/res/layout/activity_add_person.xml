<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:clickable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add Person"
        android:id="@+id/addPersonTitle"
        android:textSize="34sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#F44336" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="text"
        android:ems="12"
        android:id="@+id/etFirstName"
        android:hint="first name"
        android:ellipsize="start"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/addPersonTitle"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@drawable/edit_text_style"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="text"
        android:ems="12"
        android:id="@+id/etLastName"
        android:hint="last name"
        android:layout_below="@+id/etFirstName"
        android:ellipsize="start"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@drawable/edit_text_style"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="text"
        android:ems="12"
        android:id="@+id/etAttended"
        android:hint="Days Attended"
        android:layout_below="@+id/etLastName"
        android:ellipsize="start"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@drawable/edit_text_style"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="text"
        android:ems="12"
        android:id="@+id/etAuthorised"
        android:hint="Authorised Days"
        android:layout_below="@+id/etAttended"
        android:ellipsize="start"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@drawable/edit_text_style"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="text"
        android:ems="12"
        android:id="@+id/etUnauthorised"
        android:hint="Unauthorised Days"
        android:layout_below="@+id/etAuthorised"
        android:ellipsize="start"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@drawable/edit_text_style"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:text="Add Person"
        android:id="@+id/addBtn"
        android:onClick="addPerson"
        android:layout_below="@+id/etUnauthorised"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="#F44336"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_button_style"
        />

</RelativeLayout>