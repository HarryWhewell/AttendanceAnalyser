<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FAFAFA"
    tools:context="com.brightfuture.application.activity.HomeActivity">

    <TextView
        android:text="@string/home_message"
        android:layout_width="wrap_content"
        android:id="@+id/homeText"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginBottom="30sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View By Person"
        android:id="@+id/people"
        android:layout_below="@+id/homeText"
        android:layout_alignParentRight="true"
        android:background="@drawable/custom_button_style"
        android:layout_alignParentEnd="true"
        android:onClick="personBtn"
        android:textColor="#F44336" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/logout_button"
        android:textColor="#F44336"
        android:textSize="14sp"
        android:id="@+id/logoutButton"
        android:onClick="close"
        android:background="@drawable/custom_button_style"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View by group"
        android:id="@+id/groupbtn"
        android:background="@drawable/custom_button_style"
        android:layout_below="@+id/people"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#F44336" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Person"
        android:id="@+id/addPersonBtn"
        android:layout_below="@+id/groupbtn"
        android:layout_alignParentRight="true"
        android:background="@drawable/custom_button_style"
        android:layout_alignParentEnd="true"
        android:onClick="addPersonBtn"
        android:textColor="#F44336" />

</RelativeLayout>
